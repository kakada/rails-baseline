#tgusernameModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "Telegram username", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %h5#exampleModalLabel.modal-title= t('user.tg_username')
        %button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "modal", :type => "button"}
      .modal-body
        = t('user.to_get_tg_username')
        %ol
          - 4.times.each do |i|
            %li= t("user.tg_username_step#{i+1}")

        .text-center
          .mt-1= image_tag "1.jpg", class: 'tip-telegram-image'
          .mt-1= image_tag "2.jpg", class: 'tip-telegram-image'
          .mt-1= image_tag "3.jpg", class: 'tip-telegram-image'
          .mt-3= image_tag "4.jpg", class: 'tip-telegram-image'

      .modal-footer
        %button.btn.btn-secondary{"data-bs-dismiss": "modal", type:  "button"}= t('shared.close')
